@inject HTActive.Repository.IContentFooterRepository ContentFooterRepository
@using Microsoft.EntityFrameworkCore;
@{
    var language = (HTActive.Common.SiteLanguageTypeEnums)ViewBag.SiteLanguage;
    var contentFooter = ContentFooterRepository.GetAll().Include(x => x.ContentMenus).FirstOrDefault(x => x.Language == language);
    string tab = (string)ViewBag.Tab ?? "index";
    var baseHref = "/";
    var url = Context.Request.Path.Value;
    if (Context.Request.Path.StartsWithSegments(new Microsoft.AspNetCore.Http.PathString("/vi")))
    {
        baseHref = "/vi/";
        url = url.Substring(3);
    }
    if (Context.Request.Path.StartsWithSegments(new Microsoft.AspNetCore.Http.PathString("/en")))
    {
        baseHref = "/en/";
        url = url.Substring(3);
    }
}
